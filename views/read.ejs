<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <style>
        html, body {
            height: 100%;
            width: 100%;
            margin: 0;
        }
        body {
            background: linear-gradient(120deg, #232526 0%, #0f2027 50%, #2c5364 100%);
            background-attachment: fixed;
            color: #e6eef2; 
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }
        .app-container {
            min-height: 60%;
            display: flex;
            flex-direction: column;
            align-items: normal;
            justify-content: center;
            padding: 32px;
        }
        .card {
            background: rgba(255,255,255,0.04);
            border-radius: 12px;
            padding: 20px;
            box-shadow: 0 8px 30px rgba(0,0,0,0.4);
            max-width: 880px;
            width: 100%;
            color: #e6eef2;
        }
    </style>
</head>
<body>
    <div class="app-container">
        <div class="topbar">
            <a class="text-blue-400 inline-block mb-10" href="/">← Back to Home</a>
            <div class="brand">All Users</div>
        </div>

        <section>
            <% if(users.length > 0){ %>
                <div class="users-grid">
                    <% users.forEach(function(user){ %>
                        <article class="user-card card">
                            <a class="user-media" href="/read/<%= user._id %>">
                                <img src="<%= user.image %>" alt="<%= user.name %>">
                            </a>
                            <div class="user-body">
                                <div class="user-title"><%= user.name %></div>
                                <div class="user-sub"><%= user.email %></div>
                                <div class="user-actions">
                                    <a class="btn btn-ghost" href="/edit/<%= user._id %>">Edit</a>
                                    <a class="btn btn-danger" href="/delete/<%= user._id %>">Delete</a>
                                </div>
                            </div>
                        </article>
                    <% }) %>
                </div>
            <% } else { %>
                <div class="empty card">No users yet — create one on the home page.</div>
            <% } %>
        </section>
    </div>
</body>
</html>